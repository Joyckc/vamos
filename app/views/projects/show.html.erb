<% @project.photos.each do |photo|%>
<div>
<%= cl_image_tag photo.key, class: "project-image-show"%>
</div>
<% end %>

<div class="content-container mt-0 mb-0">
<div class="row mt-2">
  <div class="col-6 tab-border-bottom text-center vcenter">
    <button class="mb-1" id="project-button" >Project</button>
  </div>
  <div class="col-6 text-center vcenter">
    <button class="mb-1" id="ngo-button">NGO</button>
  </div>
</div>
</div>

<div class="content-container mb-2">

  <h2 class="h2-less-margin"><%= @project.title %></h2>
  <p><%= @project.ngo.name %></p>

  <div class="d-flex border-bottom">
    <div class="element mr-2"><i class="fas fa-user-friends"></i>
    </div>

    <div class="mr-3">
      <p><%= @project.capacity %> </p>
    </div>

    <div class="element mr-2"><i class="far fa-clock"></i>
    </div>

    <div class="mr-3">
      <p><%= @project.hours_per_week%> hours/week </p>
    </div>

    <div class="element mr-2"><i class="fas fa-map-marker-alt"></i>
    </div>

    <div class="mr-3">
      <p>5km</p>
    </div>
  </div>

  <div class="mt-2">
    <p><%= @project.description %> </p>
  </div>

</div>

<div class="content-container">
  <div
    id="map"
      style="width: 90vw;
      height: 40vh;
      overflow: visible;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class="mt-3">
  <h2>Reviews for <%= @project.ngo.name %> projects</h2>
  </div>

  <div class="reviews d-flex my-3 align-items-center">
    <div class="mr-2">
    <%= cl_image_tag @project.ngo.user.photo.key, class: "avatar"%>
    </div>

    <div>
      <div class="div">
        <%= @project.ngo.user.first_name %>
      </div>

      <div class="d-flex">
        <div>
          <i class="fas fa-star"></i>
        </div>
        <div>
          <i class="fas fa-star"></i>
        </div>
        <div>
          <i class="fas fa-star"></i>
        </div>
        <div>
          <i class="far fa-star"></i>
        </div>
        <div class="mr-5">
          <i class="far fa-star"></i>
        </div>
      </div>
    </div>

    <div>
      <p class="paragraph-no-margin">Great experience with this organization, love to work there!</p>
    </div>
  </div>


</div>

<div style="height: 80px">
</div>







<div class="background-button">
  <%= link_to "APPLY WITH YOUR TEAM", new_project_booking_path(@project), class: "button-apply-show"%>
</div>








