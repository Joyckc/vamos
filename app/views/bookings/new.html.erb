<div class="container-fluid">
  <div class="col-sm-10 offset-1">
     <div class="select-team">
        <h1 class="booking form title">Booking form</h1>
        <p>You've chosen a project! Now its time to get your friends on board.
          You'll find your team in the dropdown menu. Please select a team
          before you get involved. First time you are here? Then its time to create a team!  Once you request the booking the contact person
          will receive your booking!</p>
      <div class="row content-inline justify-content-center">
        <div class="col-md-6 form-group">
          <%= simple_form_for ([@project, @booking]), {:class => 'form-inline'} do |f| %>
            <%= f.association :team, collection: current_user.teams %>
            <%= f.select :hours_per_week, 1..10 %>
            <%= f.submit "Request booking", class: "btn button-apply-show"%>
          <% end %>
        </div>
        <div class="form-group col-md-6">
          <button type="button" class="button create team">Create your Team</button>
        </div>
      </div>
 </div>

   <div class="form">
          <h1 class="team-form title">Create your Team</h1>
            <%= simple_form_for(@new_team) do |f| %>
              <% if @new_team.errors.any? %>
                <div class="errors-container">
                  <ul>
                    <% @new_team.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <%= f.input :name, placeholder: 'Give your team a name', label:false, class: 'form-control' %>
              <%= f.input :photo, as: :file,  class: 'form-control' %>

              <%= f.input :selected_project, as: :hidden, input_html: { value: @project.id } %>
              <%= f.submit "Create your Team", class: "btn button-apply-show"%>
            <% end %>

    <label for="exampleFormControlTextarea1">Please leave your message </label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>

        </div>
    </div>
</div>
