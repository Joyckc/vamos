<div class="position-static">
  <%= render 'shared/logo_top_right' %>
</div>

<div class="content-container">

  <h2 class="paragraph-no-margin">Welcome to <span class="orange">Vamos!</span></h2>
  <p class="mb-4">the plattform for people who <br>want to do good!</p>

  <h3 class="font-weight-bold">Create your NGO profile</h3>
  <!-- Form -->
  <%= simple_form_for @ngo do |f|  %>
  <% if @ngo.errors.any? %>
  <div class="errors-container">
    <ul>
      <% @ngo.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%= f.input :name, placeholder: 'NGO Name*', label:false, class: 'form-control' %>
  <%= f.input :description, placeholder: 'Description*', label:false,class: 'form-control' %>
  <%= f.input :address, placeholder: 'Address*', label:false,class: 'form-control' %>
  <%= f.input :phone, placeholder: 'Phone eg. +34555555', label:false,class: 'form-control' %>
  <div class="d-flex align-items-center">
    <label class="button-upload-file mr-2">
    Select Logo
    <span style="display:none;">
    <%= f.input :logo, as: :file, input_html: {class: "logo-input"} %>
    </span>
    </label>
    <div class="logo-file-name">
    </div>
  </div>
  <%= f.submit "Create new NGO", class: "button-vamos primary-style vamos w-100 mt-4"%>
  <% end %>

</div>


<div class="d-flex text-center justify-space-around usp-background">
  <div>
    <h2><i class="fas fa-check-square orange mb-1"></i></h2>
    <p class="paragraph-no-margin">Free Project Creation</p>
  </div>
  <div>
    <h2><i class="fas fa-chart-bar orange mb-1"></i></h2>
    <p class="paragraph-no-margin">Application Dashboard</p>
  </div>
  <div>
    <h2><i class="fas fa-comments orange mb-1"></i></h2>
    <p class="paragraph-no-margin">Chat with Volunteers</p>
  </div>
</div>





